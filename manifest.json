{
  "manifest_version": 3,
  "name": "新标签页",
  "version": "1.1",
  "description": "一个美观的新标签页，支持自定义书签、快速访问和WebDAV同步。",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "history"
  ],
  "host_permissions": [
    "https://image.baidu.com/*",
    "https://t3.gstatic.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}